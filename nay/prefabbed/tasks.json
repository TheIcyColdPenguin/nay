{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-g",
                "-std=c++17",
                "-Ofast",
                "*.cpp",
                "-I",
                "includes",
                "-o",
                "${workspaceFolder}/main",
                "-Wall",
                "-Wextra",
                ";",
                "${workspaceFolder}/main"
            ],

            "options": {
                "cwd": "${workspaceFolder}/src"
            },
            "problemMatcher": ["$gcc"],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
